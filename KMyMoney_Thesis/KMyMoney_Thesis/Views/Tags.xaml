<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="KMyMoney_Thesis.Views.Tags" Title="Tags">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="..."
            Order="Default"
            Name="new"
            IconImageSource="plussimple7.png"
            Clicked="New_Clicked"/>
    </ContentPage.ToolbarItems>
    <!--x:Name="MyListViewPayees" ItemsSource="{Binding PayeeItem}" ItemTapped="Handle_PayeeItemTapped" CachingStrategy="RecycleElement"-->
    <StackLayout>
        <StackLayout x:Name="LayoutUpdate" Orientation="Vertical" IsVisible="false">
            <Entry x:Name="UpdateNameEntry"/>
            <Button Text="Update" />
        </StackLayout>
            <ListView x:Name="TagList" ItemsSource="{Binding TagsObs}" ItemTapped="OnItemSelected">                 
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    </StackLayout>

</ContentPage>
